<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.unity.sensorapp.MainActivity">

<LinearLayout
    android:id="@+id/firstLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30sp"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginTop="7dp">

    <TextView
        android:id="@+id/xTxt"
        android:text="20dp"
        android:textSize="15dp"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/yTxt"
        android:text="20dp"
        android:textSize="15dp"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/zTxt"
        android:textSize="15dp"
        android:text="20dp"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        />




    <TextView
        android:id="@+id/xGyroTxt"
        android:text="20dp"
        android:textSize="15dp"
        android:layout_marginTop="15dp"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/yGyroTxt"
        android:text="20dp"
        android:textSize="15dp"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/zGyroTxt"
        android:text="20dp"
        android:textSize="15dp"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        />




    <TextView
        android:id="@+id/xMagnoTxt"
        android:text="20dp"
        android:textSize="15dp"
        android:layout_marginTop="15dp"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/yMagnoTxt"
        android:text="20dp"
        android:textSize="15dp"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/zMagnoTxt"
        android:text="20dp"
        android:textSize="15dp"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        />




    <TextView
        android:id="@+id/light"
        android:text="30dp"
        android:layout_marginTop="15dp"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/presure"
        android:text="30dp"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/temp"
        android:text="30dp"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/humi"
        android:text="30dp"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        />



</LinearLayout>

</RelativeLayout>
